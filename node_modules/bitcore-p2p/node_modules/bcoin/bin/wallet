#!/usr/bin/env node

'use strict';

process.title = 'bcoin-wallet';

var server = require('../lib/wallet/server');

var wdb = server.create({
  config: true,
  argv: true,
  env: true,
  logFile: true,
  logConsole: true,
  logLevel: 'debug',
  db: 'leveldb'
});

wdb.on('error', function(err) {
  ;
});

wdb.open().catch(function(err) {
  throw err;
});
